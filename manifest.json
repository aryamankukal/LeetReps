{
  "manifest_version": 3,
  "name": "LeetCode Spaced Repetition",
  "version": "1.0.0",
  "description": "Spaced repetition system for LeetCode problems to help you retain knowledge",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://leetcode.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LeetCode Spaced Repetition"
  },
  "icons": {
    "16": "icons/lc16icon.png",
    "48": "icons/lc48icon.png",
    "128": "icons/lc128icon.png"
  }
} 